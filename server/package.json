{
  "name": "peek-server",
  "version": "3.2.0",
  "description": "Backend for Peek Stash Browser. Handles serving the client, API endpoints, communication with media library manager (Stash), and transcoding",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "node dist/index.js",
    "start": "node dist/index.js",
    "dev": "npx prisma migrate deploy && nodemon",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "depcheck": "depcheck",
    "knip": "knip",
    "analyze": "npm run depcheck && npm run knip",
    "generate-api-docs": "npx tsx scripts/generate-api-docs.ts",
    "test:integration": "vitest run --config integration/vitest.integration.config.ts",
    "test:integration:watch": "vitest --config integration/vitest.integration.config.ts",
    "test:integration:fresh": "FRESH_DB=true npm run test:integration",
    "stash:codegen": "graphql-codegen --config codegen.yml",
    "stash:refresh": "echo 'Copy schema.json from stashapp-api or run introspection, then run npm run stash:codegen'"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-graphql-request": "^6.4.0",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "depcheck": "^1.4.7",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "knip": "^5.69.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.17.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@prisma/client": "^6.17.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "graphql": "^16.12.0",
    "graphql-request": "^6.1.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.3.5"
  }
}
